pipeline {
    agent any

    environment {
        APP_NAME = "java-app"
        IMAGE_TAG = "${APP_NAME}:${GIT_COMMIT}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Java App') {
            steps {
                dir('spring-boot-app') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('spring-boot-app') {
                    sh 'docker build -t $IMAGE_TAG .'
                }
            }
        }

        stage('Run Docker Container (locally on EC2)') {
            steps {
                sh '''
                docker rm -f $APP_NAME || true
                docker run -d --name $APP_NAME -p 8070:8080 $IMAGE_TAG
                '''
            }
        }
    }
}
